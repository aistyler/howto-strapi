{
  "collectionName": "nboards",
  "info": {
    "name": "nboard",
    "description": "Notice Board"
  },
  "options": {
    "draftAndPublish": true,
    "increments": true,
    "timestamps": true,
    "comment": "notice board"
  },
  "attributes": {
    "type": {
      "type": "enumeration",
      "enum": ["article", "reply"]
    },
    "title": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "allowReply": {
      "type": "boolean",
      "default": false
    },
    "replies": {
      "collection": "bboard"
    },
    "user": {
      "model": "user",
      "plugin": "users-permissions"
    }
  }
}
